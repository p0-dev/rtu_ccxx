# ****************************************************************************************
# CMAKE TOOLCHAIN FILE - CLANG64
# ****************************************************************************************
# @name         | clang64.cmake
# ****************************************************************************************
# @location     | PJT_ROOT_DIR_PATH/toolchain
# ****************************************************************************************
# @brief        | cmake toolchain file for the toolchain: clang64
# ****************************************************************************************
# @desc         | Include:
#               |   + Compiler definition
#               |   + Compilation flags
#               |   + Linking flags
# ****************************************************************************************


# ========================================================================================
# Compiler
# ----------------------------------------------------------------------------------------
set (CMAKE_C_COMPILER    "x86_64-w64-mingw32-clang")
set (CMAKE_CXX_COMPILER  "x86_64-w64-mingw32-clang++")

# ========================================================================================
# Compilation Flag
# ----------------------------------------------------------------------------------------
# * Note: for the flag -D <macro>=<value>, use -D<macro>=<value>

add_compile_options (
  -Wall                                         # Enable all warning
  -Werror                                       # Treat warning as error
  -DUSER_COMP=1                                 # User setting
  $<$<CONFIG:Debug>:-g2>                        # Debugging symbols
  $<$<CONFIG:Debug>:-DUSER_DEBUG_COMP=1>        # User setting
  $<$<CONFIG:Release>:-DUSER_RELEASE_COMP=1>    # User setting
)

# ========================================================================================
# Linking Flag
# ----------------------------------------------------------------------------------------
add_link_options(
  -DUSER_LINK=1                                 # User setting
  $<$<CONFIG:Debug>:-DUSER_DEBUG_LINK=1>        # User setting
  $<$<CONFIG:Release>:-DUSER_RELEASE_LINK=1>    # User setting
)


# ****************************************************************************************
# THE END
# ****************************************************************************************